@model Retail_Bank_UI.Models.Transfer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Transfer Money</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <center><h4>Transfer Your Money instantly..</h4></center>
    <hr />
    <div class="container ks-container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <form method="post" asp-action="TransferPost" class="box">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Source_Account_Id" class="control-label text-light"></label>
                            <input asp-for="Source_Account_Id" class="form-control" />
                            <span asp-validation-for="Source_Account_Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Target_Account_Id" class="control-label text-light"></label>
                            <input asp-for="Target_Account_Id" class="form-control" />
                            <span asp-validation-for="Target_Account_Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="amount" class="control-label text-light"></label>
                            <input asp-for="amount" class="form-control" />
                            <span asp-validation-for="amount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Transfer" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
