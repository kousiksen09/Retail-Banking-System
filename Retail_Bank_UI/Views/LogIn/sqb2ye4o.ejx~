    <script>
        function fieldGenerate() {
            var c = document.getElementById("userType").value;
            console.log(c);
            var x = document.getElementById("customerid");
            x.style.display = "none";
            if (c == 0 && x.style.display == "block") {
                x.style.display = 'none';
            }
            else if (c == 1 && x.style.display == "none") {
                x.style.display = "block";
            }
        }
    </script>
